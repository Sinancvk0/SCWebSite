@model List<NewsAPI.Models.Article>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/BlogLayout.cshtml";
}

<style>
    .card-title {
        font-size: 18px;
        font-weight: bold;
        margin: 0; 
        padding: 0;
    }


    .card-text {
        font-size: 14px;
    }

 
    .card-img-top {
        width: 100%;
        height: 200px; 
        object-fit: cover; 
    }

</style>


<div class="container mt-5">
    <div class="row">
        @foreach (var article in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    @if (!string.IsNullOrEmpty(article.UrlToImage))
                    {
                        <!-- Apply fixed dimensions to the image -->
                        <img src="@article.UrlToImage" class="card-img-top" alt="News Image" style="width: 100%; height: 200px;">
                    }
                    <div class="card-body">
                        <h5 class="card-title">@article.Title</h5>
                        <p class="card-text">@article.Content</p>
                        <a href="@article.Url" target="_blank" class="btn btn-primary">Read More</a>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="row">
        <div class="col-md-12">
            <nav>
                <ul class="pagination justify-content-center">
                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        <li class="page-item @(i == ViewBag.Page ? "active" : "")">
                            <a class="page-link" href="@Url.Action("Index", new { page = i, pageSize = ViewBag.PageSize })">@i</a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    </div>
</div>


