@model List<SC.Models.BlogDetaills>
@{
    ViewData["Title"] = "CategoryDetails";
    Layout = "~/Views/Shared/BlogLayout.cshtml";
}

<div class="section search-result-wrap">
    <div class="container">
        <div class="row">
            <div class="col-12">
               
                    <div class="heading">Kategoriye Ait Bloglar Aşağıdadır. </div>

       


            </div>
        </div>
        <div class="row posts-entry">
            <div class="col-lg-8">

                @foreach (var blog in Model)
                {
                    <div class="blog-entry d-flex blog-entry-search-item">
                        <a href="/BlogRetro/Details/@blog.Id" class="img-link me-4">
                            <img src="@blog.ImageUrl" alt="Image" class="img-fluid">
                        </a>
                        <div>
                            <span class="date">@blog.DateCreated.ToString("MM/yyyy") <a href="#"></a></span>
                            <h2><a href="/BlogRetro/Details/@blog.Id">@blog.Name</a></h2>
                            <p>
                                @{
                                    var limitedContent = blog.Content.Length > 150 ? blog.Content.Substring(0, 150) + "..." : blog.Content;
                                }
                                @limitedContent
                            </p>
                            @if (blog.Content.Length > 50)
                            {
                                <a href="/BlogRetro/Details/@blog.Id">Devamını Oku</a>
                            }
                        </div>
                    </div>
                }


                <div class="row">
                    <div class="col-12">
                        <ul class="pagination">
                            @for (int i = 1; i <= ViewBag.TotalPages; i++)
                            {
                                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                    <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>

            </div>

            <div class="col-lg-4 sidebar">

                <div class="sidebar-box search-form-wrap mb-4">
                    <form action="#" class="sidebar-search-form">
                        <span class="bi-search"></span>
                        <input type="text" class="form-control" id="s" placeholder="Arama">
                    </form>
                </div>
          @await Component.InvokeAsync("BlogRandom")
                <!-- END sidebar-box -->

                <div class="sidebar-box">
                    <h3 class="heading">Kategoriler</h3>
                    <ul class="categories">
                        <li>
                            <a href="@Url.Action("CategoryDetails", "BlogRetro", new { id = 1 })">Yazılım</a>
                        </li>
                        <li>  <a href="@Url.Action("CategoryDetails", "BlogRetro", new { id = 2 })">Kişisel Gelişim</a></li>

                        <li>  <a href="@Url.Action("CategoryDetails", "BlogRetro", new { id = 3 })">Genel Kültür</a></li>
                        <li><a href="/Movie/Index">Popüler Filmler</a></li>
                        <li><a href="/DateLine/Index/">Tarihi Olaylar</a></li>
                        <li><a href="/NewsApi/Index/">Teklonoji Haberleri</a></li>

                    </ul>
                </div>
                <!-- END sidebar-box -->

                <div class="sidebar-box">
                    <h3 class="heading">Tags</h3>
                    <ul class="tags">
                        <li><a href="#">Travel</a></li>
                        <li><a href="#">Yazılım</a></li>
                        <li><a href="#">Genel Kültür</a></li>
                        <li><a href="#">C#</a></li>
                        <li><a href="#">Asp.Net Core</a></li>
                        <li><a href="#">SQL</a></li>
                        <li><a href="#">Kişisel Gelişim</a></li>
                        <li><a href="#">İş Dünyası</a></li>
                        <li><a href="#">Yazılım Dünyası</a></li>
                        <li><a href="#">Lifestyle</a></li>
                        <li><a href="#">Business</a></li>
                        <li><a href="#">Freelancing</a></li>
                        <li><a href="#">Javascript</a></li>
                        <li><a href="#">Yapay Zeka</a></li>
                        <li><a href="#">İnternet</a></li>
                    </ul>
                </div>

            </div>
        </div>
    </div>
</div>

