@model List< SC.Models.BlogDetaills>
<section class="section bg-light">
    <div class="container">
        <div class="row align-items-stretch retro-layout">
            <div class="col-md-4">
                @foreach (var item in Model.Where(x => x.BlogCategoryId == 2))
                {
                    <a href="single.html" class="h-entry mb-30 v-height gradient">

                        <div class="featured-img" style="background-image: url('@item.ImageUrl');"></div>

                        <div class="text">
                            <span class="date">@item.DateCreated.ToString("dd.MMM.yyy")</span>
                            <h2>@item.Name</h2>
                        </div>
                    </a>
                }

                @foreach (var item in Model.Where(x => x.BlogCategoryId == 3))
                {
                    <a href="single.html" class="h-entry v-height gradient">

                        <div class="featured-img" style="background-image: url('@item.ImageUrl');"></div>

                        <div class="text">
                            <span class="date">@item.DateCreated.ToString("dd.MMM.yyy")</span>
                            <h2>@item.Name</h2>
                        </div>
                    </a>
                }



            </div>
            <div class="col-md-4">
                @foreach (var item in Model.Where(x => x.BlogCategoryId == 1))
                {
                    <a href="single.html" class="h-entry img-5 h-100 gradient">

                        <div class="featured-img" style="background-image: url('@item.ImageUrl');"></div>

                        <div class="text">
                            <span class="date">@item.DateCreated.ToString("dd.MMM.yyy")</span>
                            <h2>@item.Name</h2>
                        </div>
                    </a>
                }

            </div>
            <div class="col-md-4">
                <a href="single.html" class="h-entry mb-30 v-height gradient">

                    <div class="featured-img" style="background-image: url('/blogy/images/cinema.jpg');"></div>

                    <div class="text">
                        <span class="date">@DateTime.Now.ToString("dd.MMM.yyy")</span>
                        <h2>Popüler Filmler</h2>
                    </div>
                </a>
                <a href="single.html" class="h-entry v-height gradient">

                    <div class="featured-img" style="background-image: url('/blogy/images/news.jpg');"></div>

                    <div class="text">
                        <span class="date">@DateTime.Now.ToString("dd.MMM.yyy")</span>
                        <h2>Teklonoji Haberleri</h2>
                    </div>
                </a>
            </div>
        </div>
    </div>
</section>
