@model List<SC.Models.BlogDetaills>
<div class="sidebar-box">
    <h3 class="heading">Diğer Yazılar</h3>
    <div class="post-entry-sidebar">
        <ul>
            @for (int i = 0; i < Model.Count; i++)
            {
                var item = Model[i];

                <li>
                    <a href="/BlogRetro/Details/@item.Id">
                        <img src="@item.ImageUrl" alt="Image"  class="me-4 rounded">
                        <div class="text">
                            <h4>@item.Name</h4>
                            <div class="post-meta">
                                <span class="mr-2">@item.DateCreated.ToString("MM/yyyy") </span>
                            </div>
                        </div>
                    </a>
                </li>

            }


        </ul>
    </div>
</div>